{
    "name": "ferrari",
    "version": "1.0.0",
    "description": "Back-end do projeto Ferrari desenvolvido no Hcode Lab",
    "author": "Hcode Treinamentos",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "dev": "nest start --watch",
        "start": "npm run build && npm run start:prod",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "start:indocker": "npm run migrate:up",
        "poststart:indocker": "npm run dev",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "migrate:create": "typeorm migration:create",
        "prisma:update": "npx prisma db pull && npx prisma generate",
        "migrate:up": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run",
        "postmigrate:up": "npm run prisma:update",
        "migrate:down": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:revert",
        "postmigrate:down": "npm run prisma:update",
        "docker:create": "docker-compose -f \"docker-compose.yml\" up -d --build"
    },
    "dependencies": {
        "@nestjs-modules/mailer": "^1.3.17",
        "@nestjs/axios": "^0.0.6",
        "@nestjs/common": "^8.0.0",
        "@nestjs/core": "^8.0.0",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/mapped-types": "^1.0.1",
        "@nestjs/platform-express": "^8.0.0",
        "@prisma/client": "^3.4.0",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "cross-env": "^7.0.3",
        "date-fns": "^2.25.0",
        "handlebars": "^4.7.7",
        "mysql2": "^2.3.2",
        "nodemailer": "^6.7.2",
        "passport-jwt": "^4.0.0",
        "pug": "^3.0.2",
        "reflect-metadata": "^0.1.10",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "typeorm": "^0.2.41"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.0.0",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.1",
        "@types/multer": "^1.4.7",
        "@types/node": "^8.0.29",
        "@types/nodemailer": "^6.4.4",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.2.5",
        "prettier": "^2.4.1",
        "prisma": "^3.4.0",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.4.0",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
